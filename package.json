{
  "name": "fuse-box-electron-seed",
  "productName": "fuse-box-electron-example-app",
  "author": {
    "name": "FuseBoxDevs",
    "email": "fuse@example.com",
    "url": "https://github.com/fuse-box"
  },
  "version": "1.0.5",
  "description": "Electron application boilerplate based on typescript fusebox with hot reloading",
  "main": "dist/main/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node fuse",
    "start:electron": "electron .",
    "start:electron:watch": "nodemon --watch '.dist/main/*.*' --exec npm run start:electron",
    "build": "npm run lint && cross-env NODE_ENV=production && node fuse dist",
    "lint": "tslint --project tslint.json",
    "prod": "cross-env NODE_ENV=production && npm run build && npm run start:electron",
    "packager": "npm run build && node ./package.js",
    "package": "npm run build && build --publish never",
    "pack-and-publish": "npm run build && build --publish always",
    "package-all": "npm run build && build -mwl",
    "package-linux": "npm run build && build --linux",
    "package-win": "npm run build && build --win --x64"
  },
  "build": {
    "productName": "PropertyOwnership",
    "appId": "com.cssiwv.PropertyOwnership",
    "files": [
      "dist/",
      "node_modules/",
      "resources/",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fuse-box/fuse-box-electron-seed.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fuse-box/fuse-box-electron-seed/issues"
  },
  "homepage": "https://github.com/fuse-box/fuse-box-electron-seed#readme",
  "devDependencies": {
    "@angularclass/hmr": "^2.1.3",
    "@types/core-js": "^0.9.46",
    "@types/node": "^9.4.0",
    "@types/socket.io-client": "^1.4.32",
    "cross-env": "^5.0.5",
    "devtron": "^1.4.0",
    "electron": "^1.7.6",
    "electron-builder": "^19.27.7",
    "electron-devtools-installer": "^2.2.3",
    "express": "^4.15.4",
    "fuse-box": "^2.2.31",
    "ng2-fused": "^0.5.1",
    "ngrx-store-freeze": "^0.2.1",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "nyc": "^11.4.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "uglify-js": "^3.0.27"
  },
  "dependencies": {
    "@angular/animations": "5.2.1",
    "@angular/common": "5.2.1",
    "@angular/compiler": "5.2.1",
    "@angular/core": "5.2.1",
    "@angular/forms": "5.2.1",
    "@angular/http": "5.2.1",
    "@angular/platform-browser": "5.2.1",
    "@angular/platform-browser-dynamic": "5.2.1",
    "@angular/router": "5.2.1",
    "@ngrx/effects": "^5.0.1",
    "@ngrx/entity": "^5.0.1",
    "@ngrx/router-store": "^5.0.1",
    "@ngrx/store": "^5.0.0",
    "@ngrx/store-devtools": "^5.0.1",
    "core-js": "^2.4.1",
    "electron-log": "^2.2.9",
    "electron-settings": "^3.1.1",
    "electron-updater": "^2.8.9",
    "ngrx-forms": "^2.1.2",
    "ngx-bootstrap": "^2.0.2",
    "ngx-electron": "^1.0.4",
    "rx-ipc-electron": "^0.1.2",
    "rxjs": "^5.5.6",
    "socket.io-client": "^2.0.4",
    "zone.js": "^0.8.20"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.module.ts",
      "node_modules/",
      "src/**/main.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text-summary",
      "text",
      "lcov"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  }
}
